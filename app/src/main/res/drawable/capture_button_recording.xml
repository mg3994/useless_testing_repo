<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Solid Red background (90dp) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF0000"/> <!-- Solid Red -->
            <size android:width="90dp" android:height="90dp"/> <!-- Match button size -->
            <corners android:radius="10dp"/> <!-- Slightly rounded corners for a modern look -->
        </shape>
    </item>

    <!-- White stop icon (20dp, centered within the red background) -->
    <item android:left="35dp" android:top="35dp" android:right="35dp" android:bottom="35dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <size android:width="20dp" android:height="20dp"/>
        </shape>
    </item>
</layer-list>
